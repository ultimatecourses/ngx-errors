{
  "name": "@ultimate/ngxerrors",
  "version": "0.0.0",
  "description": "A declarative validation module for reactive forms",
  "author": "Ultimate Angular",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/UltimateAngular/ngxerrors.git",
    "type": "git"
  },
  "scripts": {
    "build": "yarn run clean && yarn run copy && yarn run compile",
    "clean": "rimraf dist && mkdir -p dist",
    "compile": "yarn run ngc && yarn run rollup",
    "copy": "cp src/package.json dist/package.json && cp README.md dist/README.md",
    "example": "webpack-dev-server --inline --hot",
    "prestart": "yarn run clean && yarn run copy",
    "start": "nodemon --exec yarn run compile -e ts --watch src",
    "rollup": "rollup -c rollup.config.js >/dev/null 2>&1",
    "ngc": "ngc -p tsconfig.json",
    "test": "karma start --single-run",
    "test:watch": "karma start"
  },
  "devDependencies": {
    "@angular/compiler": "6.0.3",
    "@angular/compiler-cli": "6.0.3",
    "@types/jasmine": "2.8.7",
    "@types/karma": "1.7.3",
    "@types/node": "^10.1.2",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "5.0.0",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "jasmine-core": "3.1.0",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "3.0.0",
    "node-sass": "4.9.0",
    "nodemon": "1.17.5",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "rollup": "0.59.2",
    "sass-loader": "7.0.1",
    "typescript": "2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "4.8.3",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "3.1.4"
  },
  "dependencies": {
    "@angular/animations": "6.0.3",
    "@angular/common": "6.0.3",
    "@angular/core": "6.0.3",
    "@angular/forms": "6.0.3",
    "@angular/http": "6.0.3",
    "@angular/platform-browser": "6.0.3",
    "@angular/platform-browser-dynamic": "6.0.3",
    "@angular/router": "6.0.3",
    "core-js": "2.5.6",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.0",
    "tslib": "1.9.1",
    "zone.js": "0.8.26"
  }
}
